{
	"sandbox": {
		"network": {
			"allowedDomains": ["generativelanguage.googleapis.com"]
		}
	},
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/format-prettier.sh",
						"timeout": 30
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/typecheck-svelte.sh",
						"timeout": 60,
						"async": true
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/build-vite.sh",
						"timeout": 120
					}
				]
			}
		]
	}
}
